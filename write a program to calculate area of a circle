//write a program to find area of a circle 
#include<stdio.h>
 #define PI 3.14
int main()
{
    int r;
    float area;
    
    printf("enter radius of a circle \n");
    scanf("%d",&r);
    
    area=PI*r*r;
    
    printf("area of circle is %0.2lf\n",area);
    
    
    
    
    
    
    
    
}
